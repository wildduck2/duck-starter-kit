FROM python:3.12-alpine

# Install build dependencies
RUN apk add --no-cache build-base libffi-dev git

# Install uv
RUN pip install --no-cache-dir uv

# Set working directory
WORKDIR /app

# Copy project files
COPY . .

# Sync deps
RUN uv sync

# Expose FastAPI port
EXPOSE 5000

# Run the FastAPI app
# CMD ["tail", "-f", "/dev/null"]
CMD ["uv", "run" ,"main.py"]
