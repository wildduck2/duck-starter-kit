{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "swcOptions": {
      "jsc": {
        "parser": {
          "syntax": "typescript",
          "tsx": true,
          "decorators": true,
          "dynamicImport": true
        },
        "transform": {
          "react": {
            "runtime": "automatic",
            "development": true
          }
        },
        "target": "es2022"
      },
      "module": {
        "type": "commonjs"
      },
      "sourceMaps": true
    }
  }
}
