{
  "name": "@acme/libs",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    "./*": "./*/index.ts",
    ".": "./index.ts"
  },
  "scripts": {
    "clean": "git clean -xdf .cache .turbo node_modules dist",
    "build": "tsdown",
