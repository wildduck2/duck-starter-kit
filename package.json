{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "acme",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "turbo build",
    "front:dev": "docker-compose -f ./docker/docker-compose.yml up -d && pnpm run --filter=@acme/acme-client dev",
    "back:dev": "docker-compose -f ./docker/docker-compose.yml up -d acme-mailhog acme-postgres acme-redis acme-drizzle acme-minio && pnpm run --filter=@acme/acme-server start:dev",
    "docker:up": "docker-compose -f ./docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f ./docker/docker-compose.yml down",
    "clean": "rimraf dist .cache .turbo node_modules .next .velite",
    "clean:git": "git clean -xdf .cache .turbo node_modules dist",
    "format": "biome format --write ./",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm run lint:ws",
    "lint": "biome lint --write ./",
    "test": "trubo test",
    "bench": "turbo bench",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@turbo/gen": "^2.5.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "husky": "^9.1.7",
    "rimraf": "^4.4.1",
    "turbo": "^2.5.4",
    "typescript": "catalog:",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@ffprobe-installer/linux-x64",
      "@parcel/watcher",
      "@swc/core",
      "core-js-pure",
      "esbuild",
      "protobufjs",
      "sharp"
    ],
    "ignoredBuiltDependencies": [
      "rolldown"
    ],
    "overrides": {
      "vite": "catalog:"
    }
  },
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=20.18.1",
    "pnpm": "^10.2.1"
  }
}
