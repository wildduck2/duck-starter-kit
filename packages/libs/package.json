    "release": "changeset version",
    "publish": "pnpm run ci && changeset publish"
  },
  "devDependencies": {
    "@acme/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "tsdown": "catalog:",
    "zod": "catalog:"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.13.1"
}
